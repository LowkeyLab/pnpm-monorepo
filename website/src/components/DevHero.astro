---
import { Image } from "astro:assets";

// Props for the component
interface Props {
  name: string;
  title: string;
  description: string;
  avatarSrc: ImageMetadata;
  socials?: {
    github?: string;
    linkedin?: string;
    mastodon?: string; // Added Mastodon link
    bluesky?: string; // Added BlueSky link
  };
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

// Props destructuring with email as default CTA
const {
  name,
  title,
  description,
  avatarSrc,
  socials,
  ctaText = "Contact Me",
  ctaLink = "mailto:timdttran2000@gmail.com",
} = Astro.props;

// Add a helper to determine if a link is an email
---

<div class="hero min-h-[80vh] bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse gap-8 md:gap-12 py-12">
    <!-- Avatar/Image section -->
    <div class="avatar">
      <div
        class="w-48 md:w-64 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 shadow-lg"
      >
        <Image src={avatarSrc} alt={`${name} profile`} loading={"eager"} />
      </div>
    </div>

    <!-- Text content section -->
    <div class="max-w-md md:max-w-2xl">
      <h1 class="text-5xl font-bold text-base-content">{name}</h1>
      <h2 class="text-2xl font-semibold text-primary mt-2">{title}</h2>
      <p class="py-6 text-lg">{description}</p>

      <!-- Site navigation links - full width on mobile, side by side on larger screens -->
      <div class="flex flex-col sm:flex-row w-full mb-6 gap-3 sm:gap-5">
        <a
          href="/projects"
          class="font-medium text-lg btn-link text-center sm:text-left py-2 sm:py-0 border-b sm:border-0 border-base-300"
        >
          Projects &gt;
        </a>
        <a
          href="/work"
          class="font-medium text-lg btn-link text-center sm:text-left py-2 sm:py-0"
        >
          Experience &gt;
        </a>
      </div>

      <!-- Social media links - centered on mobile -->
      <div class="flex justify-center sm:justify-start gap-3 mb-6">
        {
          socials?.github && (
            <a
              href={socials.github}
              target="_blank"
              rel="noreferrer"
              class="btn btn-circle btn-outline"
              aria-label="GitHub Profile"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5"
              >
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            </a>
          )
        }

        {
          socials?.linkedin && (
            <a
              href={socials.linkedin}
              target="_blank"
              rel="noreferrer"
              class="btn btn-circle btn-outline"
              aria-label="LinkedIn Profile"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5"
              >
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          )
        }

        {
          socials?.mastodon && (
            <a
              href={socials.mastodon}
              target="_blank"
              rel="me noreferrer"
              class="btn btn-circle btn-outline"
              aria-label="Mastodon Profile"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5"
              >
                <path d="M23.268 5.313c-.35-2.578-2.617-4.61-5.304-5.004C17.51.242 15.792 0 11.813 0h-.03c-3.98 0-4.835.242-5.288.309C3.882.692 1.496 2.518.917 5.127.64 6.412.61 7.837.661 9.143c.074 1.874.088 3.745.26 5.611.118 1.24.325 2.47.62 3.68.55 2.237 2.777 4.098 4.96 4.857 2.336.792 4.849.923 7.256.38.265-.061.527-.132.786-.213.585-.184 1.27-.39 1.774-.753a.057.057 0 0 0 .023-.043v-1.809a.052.052 0 0 0-.02-.041.053.053 0 0 0-.046-.01 20.282 20.282 0 0 1-4.709.545c-2.73 0-3.463-1.284-3.674-1.818a5.593 5.593 0 0 1-.319-1.433.053.053 0 0 1 .066-.054c1.517.363 3.072.546 4.632.546.376 0 .75 0 1.125-.01 1.57-.044 3.224-.124 4.768-.422.038-.008.077-.015.11-.024 2.435-.464 4.753-1.92 4.989-5.604.008-.145.03-1.52.03-1.67.002-.512.167-3.63-.024-5.545zm-3.748 9.195h-2.561V8.29c0-1.309-.55-1.976-1.67-1.976-1.23 0-1.846.79-1.846 2.35v3.403h-2.546V8.663c0-1.56-.617-2.35-1.848-2.35-1.112 0-1.668.668-1.67 1.977v6.218H4.822V8.102c0-1.31.337-2.35 1.011-3.12.696-.77 1.608-1.164 2.74-1.164 1.311 0 2.302.5 2.962 1.498l.638 1.06.638-1.06c.66-.999 1.65-1.498 2.96-1.498 1.13 0 2.043.395 2.74 1.164.675.77 1.012 1.81 1.012 3.12z" />
              </svg>
            </a>
          )
        }

        {
          socials?.bluesky && (
            <a
              href={socials.bluesky}
              target="_blank"
              rel="noreferrer"
              class="btn btn-circle btn-outline"
              aria-label="BlueSky Profile"
            >
              <svg
                role="img"
                viewBox="0 0 24 24"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
                id="Bluesky--Streamline-Simple-Icons"
                height="24"
                width="24"
                class="w-5 h-5"
              >
                <>
                  <desc>Bluesky Streamline Icon: https://streamlinehq.com</desc>
                  <title>Bluesky</title>
                  <path d="M12 10.8c-1.087 -2.114 -4.046 -6.053 -6.798 -7.995C2.566 0.944 1.561 1.266 0.902 1.565 0.139 1.908 0 3.08 0 3.768c0 0.69 0.378 5.65 0.624 6.479 0.815 2.736 3.713 3.66 6.383 3.364 0.136 -0.02 0.275 -0.039 0.415 -0.056 -0.138 0.022 -0.276 0.04 -0.415 0.056 -3.912 0.58 -7.387 2.005 -2.83 7.078 5.013 5.19 6.87 -1.113 7.823 -4.308 0.953 3.195 2.05 9.271 7.733 4.308 4.267 -4.308 1.172 -6.498 -2.74 -7.078a8.741 8.741 0 0 1 -0.415 -0.056c0.14 0.017 0.279 0.036 0.415 0.056 2.67 0.297 5.568 -0.628 6.383 -3.364 0.246 -0.828 0.624 -5.79 0.624 -6.478 0 -0.69 -0.139 -1.861 -0.902 -2.206 -0.659 -0.298 -1.664 -0.62 -4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z" />
                </>
              </svg>
            </a>
          )
        }
      </div>

      <!-- Single Call to Action button - centered on mobile -->
      <div class="flex flex-wrap justify-center sm:justify-start gap-3">
        <a
          href={ctaLink}
          class="btn btn-primary"
          target={ctaLink.startsWith("mailto:") ? "_blank" : undefined}
          rel={ctaLink.startsWith("mailto:") ? "noreferrer" : undefined}
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</div>
